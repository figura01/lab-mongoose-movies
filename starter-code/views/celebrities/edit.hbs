<div class="new">

    <header>
        <div class="container">
            <h2>Edit Celebrity</h2>
        </div>
    </header>


    <div class="container">
        <form action="/celebrities/{{celebrity._id}}/edit" class="form form-new" method="POST">
            <div class="content-form">
                <div class="part-left">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" value="{{celebrity.name}}" required />
                    </div>
                    <div class="form-group">
                        <label for="occupation">Occupation</label>
                        <input type="text" id="occupation" name="occupation" value="{{celebrity.occupation}}"
                            required />
                    </div>
                </div>

                <div class="part-right">
                    <div class="form-group">
                        <label for="catchPrase">Catch phrase</label>
                        <textarea id="catchPrase" name="catchPrase" required>{{celebrity.catchPhrase}}</textarea>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-update">Update</button>
        </form>
    </div>
</div>